<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="uqac.dim.houla.MainActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageFond2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            tools:layout_editor_absoluteY="148dp" />

        <ImageView
            android:id="@+id/imageFondoptions"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:scaleType="centerCrop"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/pote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/reveil"
                android:onClick="choisirJeu"
                android:text="Réveille ton pote" />

            <Button
                android:id="@+id/redac"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/sleep"
                android:layout_toEndOf="@+id/sleep"
                android:onClick="choisirJeu"
                android:text="Rédige ta rédac" />

            <Button
                android:id="@+id/couette"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toEndOf="@+id/reveil"
                android:onClick="choisirJeu"
                android:text="Remonte ta couette" />

            <Button
                android:id="@+id/bourre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/cash"
                android:onClick="choisirJeu"
                android:text="Bourré or not ?" />

            <Button
                android:id="@+id/reveil"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:onClick="choisirJeu"
                android:text="Eteins ton réveil" />

            <Button
                android:id="@+id/cash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/motivation"
                android:onClick="choisirJeu"
                android:text="Balance du cash !" />

            <Button
                android:id="@+id/course"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/couette"
                android:layout_toEndOf="@+id/pote"
                android:onClick="choisirJeu"
                android:text="Arrive à l'heure" />

            <Button
                android:id="@+id/button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Retour"
                tools:layout_editor_absoluteX="40dp"
                tools:layout_editor_absoluteY="150dp" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>


</LinearLayout>
